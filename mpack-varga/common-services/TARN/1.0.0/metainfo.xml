<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service>
      <name>TARN</name>
      <displayName>Tarn</displayName>
      <comment>Tarn is a distributed data storage system.</comment>
      <version>1.0.0</version>
      <components>
        <component>
          <name>TARN_SERVER</name>
          <displayName>Tarn Server</displayName>
          <category>SLAVE</category>
          <cardinality>1+</cardinality>
          <dependencies>
            <dependency>
              <name>YARN/RESOURCEMANAGER</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>YARN/NODEMANAGER</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>true</enabled>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>RANGER/RANGER_ADMIN</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>false</enabled>
              </auto-deploy>
            </dependency>
            <dependency>
              <name>RANGER/RANGER_USERSYNC</name>
              <scope>cluster</scope>
              <auto-deploy>
                <enabled>false</enabled>
              </auto-deploy>
            </dependency>
          </dependencies>
          <commandScript>
            <script>scripts/tarn_server.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
      </components>
      <osSpecifics>
        <osSpecific>
          <osFamily>any</osFamily>
        </osSpecific>
      </osSpecifics>
    </service>
  </services>
</metainfo>
